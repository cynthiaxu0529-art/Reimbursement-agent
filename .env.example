# Database (Vercel Postgres)
# 在 Vercel Dashboard 创建 Postgres 数据库后自动填充
POSTGRES_URL="postgresql://..."
POSTGRES_PRISMA_URL="postgresql://..."
POSTGRES_URL_NO_SSL="postgresql://..."
POSTGRES_URL_NON_POOLING="postgresql://..."
POSTGRES_USER="..."
POSTGRES_HOST="..."
POSTGRES_PASSWORD="..."
POSTGRES_DATABASE="..."

# Authentication
AUTH_SECRET="your-auth-secret-key-here"
AUTH_URL="http://localhost:3000"

# OpenRouter API (for AI features)
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_MODEL="anthropic/claude-sonnet-4"  # Optional: default model to use

# Fluxa Payout Configuration (Base Chain USDC Payments)
# Fluxa 钱包用于发起 USDC 打款，需要财务审批
# 通过 agent_id 和 agent_token 访问财务主钱包
FLUXA_AGENT_ID="your-fluxa-agent-id"
FLUXA_AGENT_TOKEN="your-fluxa-agent-token"
FLUXA_WALLET_API="https://walletapi.fluxapay.xyz"
FLUXA_AGENT_ID_API="https://agentid.fluxapay.xyz"

# Google OAuth (for Gmail & Calendar integration)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Currency Exchange API
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"

# File Storage (for receipts)
S3_BUCKET="your-bucket-name"
S3_REGION="us-east-1"
S3_ACCESS_KEY="your-s3-access-key"
S3_SECRET_KEY="your-s3-secret-key"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Reimbursement Portal"

# Resend (Email Service)
RESEND_API_KEY="re_xxxxxxxxxx"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Email Configuration - 选择 smtp 或 resend
EMAIL_PROVIDER="smtp"  # smtp | resend

# Gmail SMTP Configuration (当 EMAIL_PROVIDER=smtp 时使用)
EMAIL_FROM="报销系统 <noreply@fluxapay.xyz>"
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@fluxapay.xyz
SMTP_PASS=your-google-app-password
# 端口配置 - 465 和 587 可以切换使用
SMTP_PORT=465
SMTP_SECURE=true
# 如果 465 不通，可以尝试以下配置：
# SMTP_PORT=587
# SMTP_SECURE=false

# Default Company Settings
DEFAULT_BASE_CURRENCY="CNY"
